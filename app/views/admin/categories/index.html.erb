<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-1g-12">
      <h2>分类管理</h2>
      <%= link_to '创建分类', new_admin_category_path,class: "btn btn-primary mb15" %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-1g-12">
      <table class="table table-striped table-bordered table-hover my-table">
        <thead>
          <tr>
            <th>分类名</th>
            <th colspan="2">操作</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= link_to '修改', edit_admin_category_path(category),class: "btn btn-primary" %></td>
              <td><%= link_to '删除', admin_category_path(category), method: :delete, data: { confirm: '确定要删除?' } ,class: "btn btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>