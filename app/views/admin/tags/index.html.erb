<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-1g-12">
      <h2>标签管理</h2>
      <%= link_to '创建标签', new_admin_tag_path,class: "btn btn-primary mb15" %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-1g-12">
      <table class="table table-striped table-bordered table-hover my-table">
        <thead>
          <tr>
            <th>标签名</th>
            <th colspan="2">操作</th>
          </tr>
        </thead>

        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= link_to '修改', edit_admin_tag_path(tag),class: "btn btn-primary" %></td>
              <td><%= link_to '删除', admin_tag_path(tag), method: :delete, data: { confirm: '确定要删除?' },class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>