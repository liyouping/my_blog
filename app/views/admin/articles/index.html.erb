<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-1g-12">
      <h2>博客管理</h2>
      <%= link_to "创建博客", new_admin_article_path,class: "btn btn-primary mb15"  %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-1g-12">
      <table class="table table-striped table-bordered table-hover my-table">
        <thead>
        <tr>
          <th>标题</th>
          <th>分类</th>
          <th>标签</th>
          <th >操作</th>
        </tr>
        </thead>

        <tbody>
        <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= article.category.try(:name) %></td>
              <td>
                <% article.tags.each do |tag| %>
                <span class="tag"><%= tag.name %></span>
                <% end %>
              </td>
              <td><%= link_to '预览', edit_admin_article_path(article),class: "btn btn-primary" %>
              <%= link_to '修改', edit_admin_article_path(article),class: "btn btn-primary" %>
              <%= link_to '删除', admin_article_path(article), method: :delete, data: { confirm: '确定要删除?' } ,class: "btn btn-danger"%></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>