<div class="row">
<% if flash[:notice].present? %>
    <div class="alert alert-success alert-dismissable col-xs-10 col-sm-10 col-md-10 col-1g-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
      <button type="button" class="close" data-dismiss="alert"
              aria-hidden="true">
        &times;
      </button>
      <%= flash[:notice]%>
    </div>
<% elsif flash[:error].present? %>
    <div class="alert alert-danger alert-dismissable col-xs-10 col-sm-10 col-md-10 col-1g-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
      <button type="button" class="close" data-dismiss="alert"
              aria-hidden="true">
        &times;
      </button>
     <%= flash[:error]%>
    </div>
<% end %>
</div>